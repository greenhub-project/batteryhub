<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/pref_header_sync"
        android:key="sync_header">

        <SwitchPreference
            android:defaultValue="false"
            android:key="sync_notifications"
            android:summary="@string/pref_description_notifications"
            android:title="@string/pref_title_notifications" />

        <ListPreference
            android:defaultValue="0"
            android:entries="@array/pref_sync_upload_titles"
            android:entryValues="@array/pref_sync_upload_values"
            android:key="sync_upload"
            android:title="@string/pref_title_upload" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_header_server"
        android:key="server_header">

        <EditTextPreference
            android:capitalize="words"
            android:defaultValue="192.168.1.105"
            android:inputType="text"
            android:key="server_url"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_server_url" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_header_about"
        android:key="about_header">

        <Preference
            android:title="@string/pref_title_help"
            android:summary="@string/pref_description_help" />

        <Preference
            android:title="@string/pref_title_copyright" />

    </PreferenceCategory>

</PreferenceScreen>