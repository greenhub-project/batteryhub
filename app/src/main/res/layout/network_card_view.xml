<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_normal"
    app:cardUseCompatPadding="true"
    android:id="@+id/cv"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_normal"
            android:text="Network"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textStyle="normal|bold"/>

        <include layout="@layout/item_divider"/>

        <!-- Wifi -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:padding="@dimen/padding_normal">

            <ImageView
                android:id="@+id/wifiIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_wifi_black_18dp" />

            <TextView
                android:id="@+id/wifiLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wifi"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/list_item_margin"
                android:layout_marginStart="@dimen/list_item_margin" />

            <TextView
                android:id="@+id/wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="##"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/ipAddressLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IP address"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="@dimen/list_item_margin"
                android:layout_marginStart="@dimen/list_item_margin" />

            <TextView
                android:id="@+id/ipAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="##"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:layout_marginTop="@dimen/list_sub_item_margin"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/macAddressLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAC address"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:layout_below="@id/ipAddress"
                android:layout_marginTop="@dimen/spacing_micro"
                android:layout_marginLeft="@dimen/list_item_margin"
                android:layout_marginStart="@dimen/list_item_margin" />

            <TextView
                android:id="@+id/macAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="##"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:layout_below="@id/ipAddress"
                android:layout_marginTop="@dimen/spacing_micro"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/ssidLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SSID network"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:layout_below="@id/macAddress"
                android:layout_marginTop="@dimen/spacing_micro"
                android:layout_marginLeft="@dimen/list_item_margin"
                android:layout_marginStart="@dimen/list_item_margin" />

            <TextView
                android:id="@+id/ssid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="##"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:layout_below="@id/macAddress"
                android:layout_marginTop="@dimen/spacing_micro"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <include layout="@layout/item_divider"/>

        <!-- bluetooth -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:padding="@dimen/padding_normal">

            <ImageView
                android:id="@+id/bluetoothIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bluetooth_black_18dp" />

            <TextView
                android:id="@+id/bluetoothLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bluetooth"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/list_item_margin"
                android:layout_marginStart="@dimen/list_item_margin" />

            <TextView
                android:id="@+id/bluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="##"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/bluetoothAddressLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bluetooth address"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/list_sub_item_margin"
                android:layout_marginLeft="@dimen/list_item_margin"
                android:layout_marginStart="@dimen/list_item_margin" />

            <TextView
                android:id="@+id/bluetoothAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="##"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:layout_marginTop="@dimen/list_sub_item_margin"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <include layout="@layout/item_divider"/>

        <!-- mobile data -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:padding="@dimen/padding_normal">

            <ImageView
                android:id="@+id/mobileDataIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_swap_vertical_black_18dp" />

            <TextView
                android:id="@+id/mobileDataLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile data"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/list_item_margin"
                android:layout_marginStart="@dimen/list_item_margin" />

            <TextView
                android:id="@+id/mobileData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="##"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/networkTypeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Network Type"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/list_sub_item_margin"
                android:layout_marginLeft="@dimen/list_item_margin"
                android:layout_marginStart="@dimen/list_item_margin" />

            <TextView
                android:id="@+id/networkType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="##"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:layout_marginTop="@dimen/list_sub_item_margin"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
